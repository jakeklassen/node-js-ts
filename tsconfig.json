{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2021", "DOM"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "#app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
