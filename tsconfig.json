{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "declarationDir": "types",
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src/**/*.mjs", "src/**/*.js", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
