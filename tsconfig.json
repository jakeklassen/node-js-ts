{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["ES2024", "DOM"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
